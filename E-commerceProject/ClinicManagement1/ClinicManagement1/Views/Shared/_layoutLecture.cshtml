@model List<ClinicManagement1.Models.Lecture>
@{ 
    List<ClinicManagement1.Models.Lecture> lecture = ViewBag.lecture;
    int dem = 1;
}
@{
    Layout = null;
}

@foreach (var item in lecture)
{
    <div class="col-lg-12">
        <div class="card">
            <a href="@Url.Action("DetailLecture","Lecture",new { id = item.Id})">
                <img src="@Html.Action("getimage","images", new { id = item.Id})" class="card-img-top" alt="...">
            </a>
            <div class="card-body">
                <a href="#" class="card-blog-a">@item.Title</a>
                <h5 class="card-title">@item.Subject</h5>
                <p>
                    <a href=""><i class="fas fa-portrait"></i> by admin</a>
                    <a href="#"><i class="far fa-calendar-alt"></i> september 25,2019</a>
                </p>
                <hr>
                <p class="card-text">
                    @item.Content
                </p>
                <a href="blog-detail.html" class="btn btn-primary">read more</a>
            </div>
        </div>
    </div>
}
