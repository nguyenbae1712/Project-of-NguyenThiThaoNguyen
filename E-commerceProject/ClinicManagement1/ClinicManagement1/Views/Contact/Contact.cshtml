
@{
    ViewBag.Title = "Contact";
}
<style>
    .div_alert{
        background-color:#fff;
        width:800px;
        padding:50px 90px;
        text-align:center;
        display:none;
        position:absolute;
        top:50%;
        left:50%;
        transform:translate(-50%,-50%);
        
    }
    .container_alert{
        height:100vh;
        width:100%;
        background-color:rgba(0,0,0,0.7);
        position:absolute;
        top:0;
        left:0;
        z-index:100;
        display:none;
    }
    .show_div_alert {
        display: block;
    }
</style>
<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="index.html">Home</a> <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Contact</strong>
            </div>
        </div>
    </div>
</div>
<div class="container_alert" id="container_alert">
    <div class="div_alert" id="div_alert">
        <img src="~/Assets/images/contact-1.png" alt="Alternate Text" style="height:100px;width:100px;" />
        <h1 style="font-size:40px;color:#000;">Thank <span id="h1"></span>, we will reply your comment soon</h1>
        <p>
            Our team is here to help make it happen. the next step is to setup a 10 - 15 minute intro
            with a member of our team. it's our change to give an overview of remote year, from what's included to the impact
            it'll have on your life and it's your changce to ask us any questions you may have on your life and it's your
            chance to ask us any questions you may have.setup a call now - your adventures are wating.
        </p>
        <h3 style="font-size:20px;color:#000;">Thank you so much your comment</h3>
        <button class="btn btn-danger" style="padding:5px 20px;display:inline-block;margin-top:10px;" id="btn_show_alert">Close</button>
    </div>
</div>
<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="h3 mb-5 text-black">Get In Touch</h2>
            </div>
            <div class="col-md-12">

                <form action="#" method="post" id="myForm">

                    <div class="p-3 p-lg-5 border">
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="c_fname" class="text-black">
                                    First Name <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control" id="c_fname" name="c_fname" style="font-size:2rem;">
                            </div>
                            <div class="col-md-6">
                                <label for="c_lname" class="text-black">
                                    Last Name <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control" id="c_lname" name="c_lname" style="font-size:2rem;">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="c_email" class="text-black">
                                    Email <span class="text-danger">*</span>
                                </label>
                                <input type="email" class="form-control" id="c_email" name="c_email" placeholder="" style="font-size:2rem;">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="c_subject" class="text-black">Subject </label>
                                <input type="text" class="form-control" id="c_subject" name="c_subject" style="font-size:2rem;">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="c_message" class="text-black">Message </label>
                                <textarea name="c_message" id="c_message" cols="30" rows="7" class="form-control" style="font-size:2rem;"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <input  type="submit" class="btn btn-primary btn-lg btn-block" value="Send Message" id="submit-show">
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



<div class="site-section bg-primary">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="text-dark mb-4 ">Offices</h2>
            </div>
            <div class="col-lg-4">
                <div class="p-4 bg-white mb-3 rounded">
                    <span class="d-block text-black h6 text-uppercase h3">New York</span>
                    <p class="mb-0">203 Fake St. Mountain View, San Francisco, California, USA</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="p-4 bg-white mb-3 rounded">
                    <span class="d-block text-black h6 text-uppercase h3">London</span>
                    <p class="mb-0">203 Fake St. Mountain View, San Francisco, California, USA</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="p-4 bg-white mb-3 rounded">
                    <span class="d-block text-black h6 text-uppercase h3">Canada</span>
                    <p class="mb-0">203 Fake St. Mountain View, San Francisco, California, USA</p>
                </div>
            </div>
        </div>
    </div>

</div>
<script>
    const myForm = document.getElementById("myForm");
    const h1 = document.getElementById("h1");
    const name = document.getElementById("c_fname");
    const div_alert = document.getElementById("div_alert");
    const container_alert = document.getElementById("container_alert");
    const btn = document.getElementById("btn_show_alert");
    myForm.addEventListener("submit", (e) => {
        e.preventDefault();
        if (name.value === "") {
            alert("vui long nhap du thong tin trong form ");
        }
        else {
            h1.innerText = name.value;
            div_alert.classList.add("show_div_alert");
            container_alert.classList.add("show_div_alert");
        }
    });
    btn.addEventListener("click", (e) => {
        e.preventDefault();
        div_alert.classList.remove("show_div_alert");
        container_alert.classList.remove("show_div_alert");
    });
    container_alert.addEventListener("click", (e) => {
        e.preventDefault();
        div_alert.classList.remove("show_div_alert");
        container_alert.classList.remove("show_div_alert");
    });
</script>

