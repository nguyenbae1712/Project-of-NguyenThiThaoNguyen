@{
    ViewBag.Title = "KT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ClinicManagement1.Models.Product
@{
    ClinicManagement1.Models.Category category = ViewBag.category;
    List<ClinicManagement1.Models.Product> sanPhamGiamGia = ViewBag.sanPhamGiamGia;
    ClinicManagement1.Models.Image image = ViewBag.image;
}
@{
    int categoryid = 1;
    if (ViewBag.categoryid != null)
    {
        categoryid = ViewBag.categoryid;
    }
}
    <section>
        <input id="productid" type="hidden" value="@Model.Id" />
    </section>
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0">
                    <a href="/Home/index">Home</a> <span class="mx-2 mb-0">/</span> <a href="/products/tatcasanpham/?categoryid=@category.Id">Shop</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">
                        @Model.ProductName
                    </strong>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-md-5 mr-auto">
                    <div class="border text-center">
                        <img src="@Html.Action("getimage","images", new { id = Model.Id})" alt="Image" class="img-fluid p-5">
                    </div>
                </div>
                <div class="col-md-6">
                    <h2 class="text-black">@Model.ProductName</h2>

                    @{
                        var giacuoi = @Model.Price_out - @Model.Discount;
                    }
                    <div class="text-primary h3">
                        @{ if (Model.Discount.GetValueOrDefault(0) != 0)
                            {
                                <strong class="text-black">@(String.Format("{0:0,0 vnđ}", giacuoi))</strong>
                                <p class="price text-black"><span><del>@(String.Format("{0:0,0 vnđ}", Model.Price_out))</del></span></p>
                            }
                            else
                            {
                                <strong class="text-black">@(String.Format("{0:0,0 vnđ}", Model.Price_out))</strong>
                            }
                        }
                    </div>

                    <div class="mb-5">
                        <div class="input-group mb-3" style="max-width: 220px;">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
                            </div>
                            <input style="font-size:100%" type="text" class="form-control text-center" value="1" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                            </div>
                        </div>

                    </div>
                    <p>
                        <a href="/Cart/AddCart/@Model.Id" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary">
                            Add To Cart
                        </a>
                    </p>
                </div>
            </div>
            <hr>
            <div class="row">

                <div class="boxArticle">
                    <article class="area_article">
                        <div class="baiviet">
                            <h1><strong>Description</strong></h1><br>
                            @Html.Raw(Model.Description)
                            <style>
                                .baiviet strong {
                                    font-weight: bold;
                                    margin-right: 5px;
                                }

                                .baiviet h1 {
                                    color: #51eaea;
                                    font-size: 30px;
                                    margin-top: 10px;
                                }
                            </style>
                        </div>

                        @*<p class="show-more" style="display:block;position:sticky;" onclick="showArticle();">
                        <a id="xemthembaiviet" class="readmore">Đọc thêm</a>
                    </p>*@
                    </article>
                </div>

            </div>
            <hr>
            <div class="row">
                @Html.Action("SanPhamNoiBat", "Products", new { categoryid = categoryid })
            </div>
            <hr>
        </div>
    </div>
    <!--#endregion-->
    <div class="site-section bg-secondary bg-image" style="background-image: url('/Assets/images/bg_2.jpg');">
        <div class="container">
            <div class="row align-items-stretch">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <a href="#" class="banner-1 h-100 d-flex" style="background-image: url('/Assets/images/bg_1.jpg');">
                        <div class="banner-1-inner align-self-center">
                            <h2>Pharma Products</h2>
                            <p>
                                Lorem, ipsum dolor sit amet consectetur adipisicing elit. Molestiae ex ad minus rem odio voluptatem.
                            </p>
                        </div>
                    </a>
                </div>
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <a href="#" class="banner-1 h-100 d-flex" style="background-image: url('/Assets/images/bg_2.jpg');">
                        <div class="banner-1-inner ml-auto  align-self-center">
                            <h2>Rated by Experts</h2>
                            <p>
                                Lorem, ipsum dolor sit amet consectetur adipisicing elit. Molestiae ex ad minus rem odio voluptatem.
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
