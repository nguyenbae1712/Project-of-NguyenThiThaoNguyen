
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section css{
    
}
@section scripts{
    
}

<div class="panel box-shadow-none content-header">
    <div class="panel-body">
        <div class="col-md-12">
            <h3 class="animated fadeInLeft">Create Lecture</h3>
            <p class="animated fadeInDown">
                Ui Element <span class="fa-angle-right fa"></span>Text Editor
            </p>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="panel">
        <div class="panel-body">
            <div id="summernote">
                @using (Html.BeginForm("create", "ALecture", FormMethod.Post))
                {
                    <div class="form-group" style="width: 100%; margin-top:20px; text-align:left;">
                        <label class="control-label text-right" style="margin-right:10px; display:inline-block; color:#918C8C; font-size:150%;">Title</label>
                        <br />
                        <div style="width:100%; display:inline-block;"><input name="txtTitle" style="width:100%;" type="text" class="form-control"></div>
                    </div>
                    <div class="form-group" style="width: 100%; margin-top:20px; text-align:left;">
                        <label class="control-label text-right" style="margin-right:10px; display:inline-block; color:#918C8C; font-size:150%;">Subject</label>
                        <br />
                        <div style="width:100%; display:inline-block;"><input name="txtSubject" style="width:100%;" type="text" class="form-control"></div>
                    </div>
                    <div class="form-group" style="width: 100%; margin-top:20px; text-align:left;">
                        <label class="control-label text-right" style="margin-right:10px; display:inline-block; color:#918C8C; font-size:150%;">Content</label>
                        <br />
                        <div style="width:100%; display:inline-block;"><textarea name="txtContent" style="width:100%; height:250px;" type="text" class="form-control"></textarea></div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Create new lecture" id="submit-show">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

